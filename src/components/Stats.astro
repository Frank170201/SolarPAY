---
// Stats Section
---

<section class="stats-section">
  <div class="container">
    <div class="stats-grid">
      <div class="stat-item">
        <div class="stat-number">100+</div>
        <div class="stat-label">Clientes Satisfechos</div>
      </div>

      <div class="stat-item">
        <div class="stat-number">2MW+</div>
        <div class="stat-label">Capacidad Instalada</div>
      </div>

      <div class="stat-item">
        <div class="stat-number">95%</div>
        <div class="stat-label">Ahorro Promedio</div>
      </div>

      <div class="stat-item">
        <div class="stat-number">Más  1 año</div>
        <div class="stat-label">En el Mercado</div>
      </div>
    </div>
  </div>
</section>

<style>
  .stats-section {
    padding: 4rem 2rem;
    background: linear-gradient(135deg, #f59e0b 0%, #ea580c 100%);
    color: white;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 3rem;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
  }

  .stat-label {
    font-size: 1.1rem;
    opacity: 0.95;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .stats-section {
      padding: 3rem 1rem;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }

    .stat-number {
      font-size: 2rem;
    }
  }
</style>
